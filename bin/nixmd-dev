#!/usr/bin/env lua

-- Uses the src *.tl files

local fullpath = debug.getinfo(1,"S").source:sub(2)
fullpath = io.popen("realpath '"..fullpath.."'", 'r'):read()
fullpath = fullpath:gsub('[\n\r]*$','')
local dirname, filename = fullpath:match('^(.*/)([^/]-)$')
dirname = dirname or ''
package.path = package.path .. ";" .. dirname .. "../src/?.lua"

local tl = require("tl")
tl.loader()

local nixmd = require("nixmd")

nixmd.Run()
